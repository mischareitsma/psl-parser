{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"moduleResolution": "node",
		"module": "CommonJS",
		"target": "esnext",
		"outDir": "out",
		"lib": [
			"esnext"
		],
		"inlineSourceMap": true,
		"rootDirs": ["src", "test"],
		"alwaysStrict": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "lf",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
	},
	"exclude": [
		"node_modules",
		"out",
		"dist",
		"lib",
		"tmp",
		"jest.config.ts",
		"build-package-json.js",
	],
}
